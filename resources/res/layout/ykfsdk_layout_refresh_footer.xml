<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ProgressBar android:id="@+id/pb_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/ykfsdk_progressbar_refresh"/>
    <TextView android:textSize="16sp" android:textColor="#4db6ac" android:id="@+id/tv_loading" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ykfsdk_ykf_loading"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_end" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <View android:gravity="start" android:background="#4db6ac" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:alpha="0.5"/>
        <TextView android:textSize="16sp" android:textColor="#4db6ac" android:gravity="center" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ykfsdk_ykf_intheend"/>
        <View android:gravity="end" android:background="#4db6ac" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:alpha="0.5"/>
    </LinearLayout>
</LinearLayout>
