<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include android:id="@+id/include_time" layout="@layout/ykfsdk_ykf_chatitem_time"/>
    <RelativeLayout android:background="@drawable/ykfsdk_ykf_receive_msg_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="20dp" android:layout_below="@+id/include_time">
        <RelativeLayout android:id="@+id/kf_chat_card_re" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/kf_chat_card_icon" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/ykfsdk_kf_pic_thumb_bg" android:contentDescription="TODO"/>
            <LinearLayout android:orientation="vertical" android:paddingLeft="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/kf_chat_card_icon" android:layout_toEndOf="@+id/kf_chat_card_icon">
                <TextView android:textSize="16sp" android:textColor="@color/ykfsdk_color_151515" android:ellipsize="end" android:id="@+id/kf_chat_card_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="5dp" android:maxLines="2" android:layout_marginStart="10dp" android:layout_marginEnd="5dp"/>
                <TextView android:textSize="13sp" android:textColor="@color/ykfsdk_color_999999" android:ellipsize="end" android:id="@+id/kf_chat_card_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:maxLines="1" android:layout_marginStart="10dp" android:layout_marginEnd="5dp"/>
                <TextView android:textSize="16sp" android:textColor="@color/ykfsdk_tv_red" android:ellipsize="end" android:id="@+id/kf_chat_card_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:maxLines="1" android:layout_marginStart="10dp" android:layout_marginEnd="5dp"/>
            </LinearLayout>
        </RelativeLayout>
        <View android:id="@+id/view_line" android:background="@drawable/ykfsdk_common_line_draw_dash" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="15dp" android:layout_below="@+id/kf_chat_card_re" android:layerType="software"/>
        <TextView android:textSize="13sp" android:textColor="@color/ykfsdk_all_white" android:gravity="center" android:id="@+id/kf_chat_card_send" android:background="@drawable/ykfsdk_bg_circle_fe6b6b" android:paddingLeft="28dp" android:paddingTop="6dp" android:paddingRight="28dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:text="@string/ykfsdk_send" android:layout_below="@+id/view_line" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
