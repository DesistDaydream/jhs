    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/page_title_right_group" android:paddingRight="7dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:minWidth="80dp" android:layout_alignParentRight="true">
        <TextView android:textSize="14sp" android:textColor="@color/black_font_color" android:gravity="right" android:id="@+id/page_title_right_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/page_title_right_icon" android:clickable="false" android:layout_width="38dp" android:layout_height="30dp" android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>
