<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/ykfsdk_all_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/ykfsdk_color_f7f7f7" android:layout_width="match_parent" android:layout_height="48dp">
        <TextView android:textSize="15sp" android:textColor="@color/ykfsdk_color_878787" android:gravity="center_vertical" android:id="@+id/tv_logistics_progress_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:text="@string/ykfsdk_ykf_logistics_information" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/iv_bottom_close" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/ykfsdk_icon_shop_close" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rl_express_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp">
            <TextView android:textSize="14sp" android:textColor="@color/ykfsdk_all_black" android:id="@+id/tv_express_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_marginBottom="10dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="@color/ykfsdk_all_black" android:id="@+id/tv_express_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_express_name" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/ykfsdk_color_ebebeb" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/rl_express_text"/>
    </RelativeLayout>
    <TextView android:layout_gravity="center_horizontal" android:id="@+id/tv_no_data" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/ykfsdk_ykf_no_logistics_information"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_switch" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
