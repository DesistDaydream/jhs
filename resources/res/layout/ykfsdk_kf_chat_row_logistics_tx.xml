    <include android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginBottom="2dp" android:layout_alignBottom="@+id/chart_from_container" layout="@layout/ykfsdk_ykf_read_unreadtext"/>
