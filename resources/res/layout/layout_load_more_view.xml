<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:paddingTop="42dp" android:paddingBottom="42dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/scrollable_footer_no_more" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/black_b5b5b7" android:id="@+id/noMoreTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_no_more"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textColor="@color/black_b5b5b7" android:gravity="center" android:id="@+id/scrollable_footer_tv_load_fail" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/load_fail"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/scrollable_footer_layout_loading" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.vector.view.ProgressView android:id="@+id/scrollable_footer_progress_view" android:layout_width="@dimen/scrollable_extend_loading_size" android:layout_height="@dimen/scrollable_extend_loading_size" android:src="@drawable/ic_loading"/>
            <TextView android:textSize="@dimen/scrollable_extend_text" android:textColor="@color/black_b5b5b7" android:id="@+id/scrollable_footer_tv_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/sr_list_header_hint_loading" android:layout_marginStart="8dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
