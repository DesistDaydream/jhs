<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/rl_OneQuestion" android:background="@drawable/ykfsdk_bg_item_click" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:src="@drawable/ykfsdk_kf_icon_question_down" android:layout_alignTop="@+id/tv_commonQuetion" android:layout_alignBottom="@+id/tv_commonQuetion" android:layout_alignParentRight="true"/>
