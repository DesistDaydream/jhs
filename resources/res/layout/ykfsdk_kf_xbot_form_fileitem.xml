<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_xbot_fileitem" android:background="@drawable/ykfsdk_kf_bg_xbot_tiem" android:layout_width="match_parent" android:layout_height="@dimen/ykfsdk_ykf_xbot_form_item_height" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
        <ImageView android:id="@+id/iv_xbot_fileitem_type" android:layout_width="28dp" android:layout_height="32dp" android:layout_marginLeft="16dp" android:src="@drawable/ykfsdk_ykf_icon_file_default" android:layout_centerVertical="true"/>
