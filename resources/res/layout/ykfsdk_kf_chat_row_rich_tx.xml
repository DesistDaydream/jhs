<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="@color/ykfsdk_color_666666" android:gravity="center" android:id="@+id/chatting_time_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:id="@+id/chart_from_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="48dp" android:layout_marginBottom="10dp" android:layout_below="@+id/chatting_time_tv" android:layout_alignParentRight="true">
        <com.m7.imkfsdk.view.RoundCornerImageView android:id="@+id/chatting_avatar_iv" android:background="@drawable/ykfsdk_bg_avatar" android:layout_width="46dp" android:layout_height="46dp" android:layout_marginRight="8dp" android:src="@drawable/ykfsdk_kf_head_default_local" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
        <TextView android:textSize="10sp" android:textColor="@color/ykfsdk_all_black" android:id="@+id/chatfrom_tv_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/ykfsdk_name" android:layout_toLeftOf="@+id/chatting_avatar_iv"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/kf_chat_rich_lin" android:background="@drawable/ykfsdk_ykf_receive_msg_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="6.23dp" android:layout_toLeftOf="@+id/chatting_avatar_iv" android:layout_below="@+id/chatfrom_tv_name">
            <LinearLayout android:orientation="horizontal" android:id="@+id/kf_chat_rich_tv_lin" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/kf_chat_rich_iv" android:layout_width="72dp" android:layout_height="72dp" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="16sp" android:textColor="@color/ykfsdk_color_333333" android:ellipsize="end" android:id="@+id/kf_chat_rich_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:text="@string/ykfsdk_titlename" android:maxLines="2"/>
                    <TextView android:textSize="12sp" android:textColor="@color/ykfsdk_grey" android:ellipsize="end" android:id="@+id/kf_chat_rich_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="8dp" android:layout_marginRight="5dp" android:text="@string/ykfsdk_content" android:maxLines="1" android:layout_weight="1"/>
                    <TextView android:textSize="14sp" android:textColor="@color/ykfsdk_tv_red" android:ellipsize="end" android:id="@+id/kf_chat_rich_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="8dp" android:layout_marginRight="5dp" android:text="@string/ykfsdk_content" android:maxLines="1" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <include android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginBottom="4dp" android:layout_alignBottom="@+id/chart_from_container" layout="@layout/ykfsdk_ykf_read_unreadtext"/>
    <ImageView android:id="@+id/chatting_state_iv" android:background="@drawable/ykfsdk_kf_chat_failure_msgs" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="28dp" android:layout_centerVertical="true"/>
    <ProgressBar android:id="@+id/uploading_pb" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="28dp" android:indeterminateDrawable="@drawable/ykfsdk_progressbar_color" android:layout_centerVertical="true"/>
    <TextView android:textSize="12sp" android:gravity="center" android:id="@+id/chatting_withdraw_tv" android:background="@color/ykfsdk_lightgrey" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="@string/ykfsdk_writedrown_msg" android:layout_below="@+id/chatting_time_tv" android:layout_centerHorizontal="true"/>
</RelativeLayout>
