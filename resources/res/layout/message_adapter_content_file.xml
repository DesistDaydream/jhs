<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:paddingLeft="11.94dp" android:paddingTop="8dp" android:paddingRight="11.94dp" android:paddingBottom="8dp" android:layout_width="200dp" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="15.36sp" android:textColor="@color/black" android:ellipsize="middle" android:id="@+id/file_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:includeFontPadding="false"/>
